public class Exercicio3 {
    public static void main(String[] args) {
        double n1 = 7.0;
        double n2 = 5.5;
        double n3 = 6.5;

        double media = (n1 + n2 + n3) / 3;

        System.out.println("MÃ©dia: " + media);

        if (media >= 6) {
            System.out.println("Aprovado");
        } else {
            System.out.println("Reprovado");
        }
    }
}
